include _variables.jade
include _mixins.jade
include ../_utils.jade
doctype html
html(lang="ru")
  //- CONNECT HEAD
  include _head.jade
    block styles
      include ../_inc/_styles.jade
  //- CONNECT BODY
  - var attributes = {};
  - attributes.class = [multipage ? (home ? 'page_home' : 'page_post') : ''];
  - attributes.class.push(sidebarLeft ? 'page_sidebar_left' : '');
  - attributes.class.push(sidebarRight ? 'page_sidebar_right' : '');
  body.page(class=bodyClasses)&attributes(attributes)
    .page__inner
      // HEADER START 
      include ../_inc/_header.jade
      // HEADER END 
      if multipage
        // MAIN START 
        main.main
          .container
            h1.main-title #{title}
            .row.row-offcanvas.row-offcanvas-right
              .col-md-8.col-md-push-4.col-lg-6.col-lg-push-3
                block content
              .col-md-4.col-md-pull-8.col-lg-3.col-lg-pull-6
                block sidebarLeft
              .col-md-12.col-lg-3.sidebar-offcanvas
                block sidebarRight
            //- 
              if sidebarLeft || sidebarRight
                .page__layout
                  .page__content
                    block content
                  include ../_inc/_sidebar.jade
              else
                block content
        // MAIN END 
      else
        // SECTION START 
        block content
        // SECTION END 
    //- CONNECT FOOTER
    // FOOTER START 
    include ../_inc/_footer.jade
    // FOOTER END 
    // MODALS START 
    .hidden
      include ../_inc/_modals.jade
    // MODALS END 
    include ../_inc/_scripts.jade