include _variables.jade
include _mixins.jade
include ../_utils/_mixins.jade
mixin article(multipage)
  - var attributes = {};
  - attributes.class = [multipage ? (home ? 'page_home' : 'page_post') : ''];
  - attributes.class.push(sidebar_left ? 'page_sidebar_left' : '');
  - attributes.class.push(sidebar_right ? 'page_sidebar_right' : '');
  body.page(class=body_classes)&attributes(attributes)
    .page__inner
      // HEADER START 
      include ../_inc/_header.jade
      // HEADER END 
      if multipage
        // MAIN START 
        main.main
          .container
            h1.main-title #{title}
            if sidebar_right || sidebar_left
              .page__layout
                .page__content
                  block content
                include ../_inc/_sidebar.jade
            else
              block content
        // MAIN END 
      else
        // SECTION START 
        block content
        // SECTION END 
    block
doctype html
html(lang="ru")
  include _head.jade
    block styles
      include ../_inc/_styles.jade
  +article(multipage)
    // FOOTER START 
    include ../_inc/_footer.jade
    // FOOTER END 
    // MODALS START 
    .hidden
      include ../_inc/_modals.jade
    // MODALS END 
    include ../_inc/_scripts.jade