//- BASE MIXINS
  //- connection files
mixin styles(...files)
  each file in files
    link(rel="stylesheet" href=file)
mixin scripts(...files)
  each file in files
    script(src=file)
  //- nav links

//- MULTI MENU
mixin multiSubmenu(data, nav_class)
  ul(class='#{nav_class}-submenu')
    each item in data
      li(class='#{nav_class}-submenu__item')
        = '\n'
        a(href="#{item.url}" class='#{nav_class}-submenu__link')
          span= item.val
mixin multiMenu(data, nav_class, dropdown)
  //- Example: +multiMenu(menu_obj, 'class-menu')
  nav(class='#{nav_class}')&attributes(attributes)
    ul(class='#{nav_class}__list')
      each item in data
        - var itemClasses = [nav_class+'__item']
        if (item.submenu && dropdown)
          - itemClasses.push(itemClasses[0] + '_dropdown')
        li( class=itemClasses, class={active: activeMenu === item.val} )
          = '\n'
          a(href="#{item.url}" class='#{nav_class}__link')
            span= item.val
          if (item.submenu && dropdown)
            div(class='#{nav_class}__submenu')
              +multiSubmenu(item.submenu, nav_class)

//- HELPERS MIXINS
mixin email(email,icon)
  = '\n'
  a(href="mailto:"+email, target="_blank", class!=attributes.class)
    if icon
      i(class=icon)
      | 
    | #{email}
mixin imgRadius(attr)
  = '\n'
  span&attributes(attributes)
    span
      img(src=attr alt="")
mixin navItems(obj)
  ul&attributes(attributes)
    each link, val in obj
      li
        = '\n'
        a(href=link)= val
mixin ulLiA(...items)
  ul&attributes(attributes)
    each item in items
      li
        = '\n'
        a(href="#")= item
